#include <stdio.h>

int main() {
    int num;
    printf("digite um numero: ");
    scanf("%d", &num);
    if(num%2 !=0){
        printf("\neste numero é impar");
    }
    else{
        if(num==0){
             printf("\no nunero é neutro e par");
    }
        else{
             printf("\n o numero é par");
    }
    }

    return 0;
}